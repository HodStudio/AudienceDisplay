@page
@model IndexModel
@{
    Layout = string.Empty;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AudienceDisplayServer - Viewer</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="template">
        <div class="container" id="uniqueIdentifier">
            <img class="picture fl" src="{IMAGE_SRC}" alt="{AUTHOR_NAME}'s name" style="border-color: @(Model.ColorConfiguration.Picture.Border)">
            <div class="content fl">
                <div class="title" style="background-color: @(Model.ColorConfiguration.Author.Background); border-color: @(Model.ColorConfiguration.Author.Border); color: @(Model.ColorConfiguration.Author.Text);">
                    <p>{AUTHOR_NAME}</p>
                </div>
                <div class="comment" style="background-color: @(Model.ColorConfiguration.Comment.Background); color: @(Model.ColorConfiguration.Comment.Text);">
                    <p>{MESSAGE}</p>
                </div>
            </div>
        </div>
    </div>
    <div id="showMessage"></div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/jquery/jquery.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>